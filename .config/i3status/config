general {
        colors = true
        interval = 1
}

order += "battery 0"
order += "load"
order += "disk /"
order += "memory"
order += "volume master"
order += "time"

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 10
}

load {
        format = "%1min"
}

disk "/" {
        format = "%free"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY: %free"
}

time {
        format = "%Y-%m-%d %a %I:%M:%S %p"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
